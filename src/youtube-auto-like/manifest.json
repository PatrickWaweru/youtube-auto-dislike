{
    "name": "__MSG_appName__",
    "version": "4.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDesc__",
    "icons": {
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "default_locale": "en",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-38.png"
        },
        "default_title": "YouTube Auto Like",
        "default_popup": "options.html"
    },
    "content_scripts": [
        {
        "matches": ["*://youtube.com/*", "*://*.youtube.com/*"],
        "js": ["js/liker_content_injector.js"],
        "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "web_accessible_resources": [
        "src/js/*"
    ],
    "options_ui": {
        "page": "html/options.html"
    }
}
